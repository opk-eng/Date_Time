from datetime import datetime

def sistema_emprestimo_livros():
    data_devolucao_str = input("Digite a data de devoluÃ§Ã£o do livro (dd/mm/aaaa): ")
    try:
        data_devolucao = datetime.strptime(data_devolucao_str, "%d/%m/%Y")
    except ValueError:
        print("Formato de data invÃ¡lido. Use dd/mm/aaaa.")
        return

    data_atual = datetime.now()

    diferenca = data_devolucao - data_atual

    if diferenca.days > 0:
        print(f"VocÃª tem {diferenca.days} dias para devolver.")
    elif diferenca.days < 0:
        print(f"O livro estÃ¡ atrasado em {abs(diferenca.days)} dias!")
    else:
        print("O livro vence hoje!")

if __name__ == "__main__":
    sistema_emprestimo_livros()
##############################################
from datetime import datetime

def calculadora_idade():
    data_nascimento_str = input("Digite sua data de nascimento (dd/mm/aaaa): ")
    try:
        data_nascimento = datetime.strptime(data_nascimento_str, "%d/%m/%Y")
    except ValueError:
        print("Formato de data invÃ¡lido. Use dd/mm/aaaa.")
        return

    ano_atual = datetime.now().year
    idade = ano_atual - data_nascimento.year

    print(f"Sua idade Ã©: {idade} anos.")

if __name__ == "__main__":
    calculadora_idade()

#############################################################################
import streamlit as st
import datetime
from datetime import date, timedelta

# ConfiguraÃ§Ã£o da pÃ¡gina
st.set_page_config(
    page_title="Sistema de Aluguel de Filmes e Jogos",
    page_icon="ğŸ¬",
    layout="wide"
)

# Lista de produtos disponÃ­veis
PRODUTOS = {
    "Filmes": [
        "Avatar: O Caminho da Ãgua",
        "Top Gun: Maverick",
        "Vingadores: Ultimato",
        "Homem-Aranha: Sem Volta para Casa",
        "Duna"
    ],
    "Jogos": [
        "The Last of Us Part II",
        "God of War RagnarÃ¶k",
        "Elden Ring",
        "FIFA 24",
        "Call of Duty: Modern Warfare III"
    ]
}

def calcular_status_devolucao(data_devolucao):
    """Calcula o status da devoluÃ§Ã£o baseado na data atual"""
    hoje = date.today()
    diferenca = (data_devolucao - hoje).days
   
    if diferenca > 0:
        return f"Faltam {diferenca} dias para a devoluÃ§Ã£o", "info"
    elif diferenca == 0:
        return "A devoluÃ§Ã£o Ã© hoje!", "warning"
    else:
        return f"O prazo jÃ¡ passou hÃ¡ {abs(diferenca)} dias", "error"

def main():
    st.title("ğŸ¬ Sistema de Aluguel de Filmes e Jogos")
    st.markdown("---")
   
    # Sidebar para seleÃ§Ã£o
    st.sidebar.header("ğŸ“‹ Registrar Aluguel")
   
    # SeleÃ§Ã£o do tipo de produto
    tipo_produto = st.sidebar.selectbox(
        "Escolha o tipo de produto:",
        ["Filmes", "Jogos"]
    )
   
    # SeleÃ§Ã£o do produto especÃ­fico
    produto_selecionado = st.sidebar.selectbox(
        f"Escolha um {tipo_produto.lower()[:-1]}:",
        PRODUTOS[tipo_produto]
    )
   
    # SeleÃ§Ã£o das datas
    st.sidebar.subheader("ğŸ“… Datas")
   
    data_retirada = st.sidebar.date_input(
        "Data de retirada:",
        value=date.today(),
        min_value=date.today() - timedelta(days=30),
        max_value=date.today() + timedelta(days=30)
    )
   
    data_devolucao = st.sidebar.date_input(
        "Data de devoluÃ§Ã£o:",
        value=date.today() + timedelta(days=7),
        min_value=data_retirada,
        max_value=date.today() + timedelta(days=90)
    )
   
    # ValidaÃ§Ã£o das datas
    if data_devolucao < data_retirada:
        st.sidebar.error("A data de devoluÃ§Ã£o deve ser posterior Ã  data de retirada!")
        return
   
    # BotÃ£o para registrar aluguel
    if st.sidebar.button("ğŸ¯ Registrar Aluguel", type="primary"):
        # Armazenar dados na sessÃ£o
        st.session_state.aluguel_registrado = {
            "tipo": tipo_produto,
            "produto": produto_selecionado,
            "data_retirada": data_retirada,
            "data_devolucao": data_devolucao
        }
   
    # Ãrea principal - Exibir informaÃ§Ãµes do aluguel
    if hasattr(st.session_state, 'aluguel_registrado') and st.session_state.aluguel_registrado:
        aluguel = st.session_state.aluguel_registrado
       
        st.header("âœ… Aluguel Registrado com Sucesso!")
       
        # Criar colunas para layout
        col1, col2 = st.columns([2, 1])
       
        with col1:
            # InformaÃ§Ãµes do produto
            st.subheader("ğŸ“¦ InformaÃ§Ãµes do Produto")
            st.write(f"**Tipo:** {aluguel['tipo']}")
            st.write(f"**Produto:** {aluguel['produto']}")
           
            # InformaÃ§Ãµes das datas
            st.subheader("ğŸ“… InformaÃ§Ãµes das Datas")
            st.write(f"**Data de Retirada:** {aluguel['data_retirada'].strftime('%d/%m/%Y')}")
            st.write(f"**Data de DevoluÃ§Ã£o:** {aluguel['data_devolucao'].strftime('%d/%m/%Y')}")
           
            # Calcular perÃ­odo de aluguel
            periodo = (aluguel['data_devolucao'] - aluguel['data_retirada']).days
            st.write(f"**PerÃ­odo de Aluguel:** {periodo} dias")
       
        with col2:
            # Status da devoluÃ§Ã£o
            st.subheader("â° Status da DevoluÃ§Ã£o")
            status_msg, status_type = calcular_status_devolucao(aluguel['data_devolucao'])
           
            if status_type == "info":
                st.info(status_msg)
            elif status_type == "warning":
                st.warning(status_msg)
            else:
                st.error(status_msg)
           
            # BotÃ£o para limpar registro
            if st.button("ğŸ—‘ï¸ Limpar Registro"):
                del st.session_state.aluguel_registrado
                st.rerun()
       
        # Linha separadora
        st.markdown("---")
       
        # InformaÃ§Ãµes adicionais
        st.subheader("ğŸ“Š Resumo do Aluguel")
       
        # Criar mÃ©tricas
        col1, col2, col3, col4 = st.columns(4)
       
        with col1:
            st.metric("Produto", aluguel['produto'])
       
        with col2:
            st.metric("PerÃ­odo", f"{periodo} dias")
       
        with col3:
            dias_restantes = (aluguel['data_devolucao'] - date.today()).days
            st.metric("Dias para DevoluÃ§Ã£o", dias_restantes)
       
        with col4:
            if dias_restantes >= 0:
                st.metric("Status", "âœ… No Prazo")
            else:
                st.metric("Status", "âŒ Atrasado")
   
    else:
        # Tela inicial
        st.header("ğŸ‘‹ Bem-vindo ao Sistema de Aluguel!")
        st.write("Use o painel lateral para registrar um novo aluguel.")
       
        # Mostrar produtos disponÃ­veis
        st.subheader("ğŸ¬ Filmes DisponÃ­veis")
        for filme in PRODUTOS["Filmes"]:
            st.write(f"â€¢ {filme}")
       
        st.subheader("ğŸ® Jogos DisponÃ­veis")
        for jogo in PRODUTOS["Jogos"]:
            st.write(f"â€¢ {jogo}")
       
        st.markdown("---")
        st.info("ğŸ’¡ **Dica:** Selecione um produto no painel lateral e defina as datas para comeÃ§ar!")

if __name__ == "__main__":
    main()
